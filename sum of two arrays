#include <stdio.h>
#include <stdlib.h>

int main() {
    int *arr1,*arr2,*sum;
    int size,i;
    printf("Enter the size of the arrays: ");
    scanf("%d", &size);
    arr1 = (int *)malloc(size * sizeof(int));
    arr2 = (int *)malloc(size * sizeof(int));
    sum = (int *)malloc(size * sizeof(int));
    printf("Enter elements for the first array:\n");
    for(i = 0; i < size; i++) {
        printf("Enter element %d: ", i+1);
        scanf("%d", &arr1[i]);
    }
    for(i = 0; i < size; i++) {
        printf("Enter element %d: ", i+1);
        scanf("%d", &arr2[i]);
    }
     for(i = 0; i < size; i++) {
        sum[i] = arr1[i] + arr2[i];
    }
    printf("\nThe sum of the arrays is:\n");
    for(i = 0; i < size; i++) {
        printf("%d ", sum[i]);
    }
    return 0;
}
